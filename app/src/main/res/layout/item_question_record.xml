<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/bg_white_10"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_question_type"
            android:textColor="@color/black_1"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:textColor="@color/grey_3"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>
    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question_content"
        android:textColor="@color/black_3"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/kefu_1"/>
        <TextView
            android:layout_toEndOf="@id/iv_kefu"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_feed_back"
            android:textColor="@color/black_1"
            android:textSize="14sp"
            android:text="反馈回复："
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_feed_back"
            android:layout_toEndOf="@id/iv_kefu"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_feed_back_content"
            android:textColor="@color/black_1"
            android:textSize="14sp"
            android:text="反馈回复："
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情 >"
            android:textSize="13sp"
            android:textColor="@color/grey_1"/>
    </RelativeLayout>

</LinearLayout>