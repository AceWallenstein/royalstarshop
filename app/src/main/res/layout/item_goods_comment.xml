<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_10"
    android:padding="15dp">

    <com.pinnoocle.royalstarshop.widget.RoundImageView
        android:id="@+id/iv_avater"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_avater"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/iv_avater"
        android:text="小丸子姐姐"
        android:textColor="@color/black_3"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_avater"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_avater"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/praise_good" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="好评"
            android:textColor="#FF2329" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="2020-12-24"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avater"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_avater"
        android:text="超级好用，会员购买超级划算的，喜欢的集美入！超级好用，会员购买超级划算的，喜欢的集美入！超级好用，会员购买超级划算的，喜欢的集美入！超级好用，会员购买超级划算的，喜欢的集美入！"
        android:textColor="@color/black_3" />

    <com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/nineGridImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_margin="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_avater"
        app:imgGap="4dp"
        app:showStyle="fill"
        app:singleImgSize="120dp" />


</RelativeLayout>