<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY" />

        <TextView
            android:visibility="gone"
            android:textSize="10sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首充权益"
            android:textColor="@color/white"
            android:background="@drawable/bg_red_5"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black_1"
            android:textSize="15sp"
            tools:text="节能环保便携式高级净水过滤器"
            android:id="@+id/tv_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/iv_goods_pic"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:layout_toEndOf="@id/iv_goods_pic"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/tv_spec"
            tools:text="￥188.32"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF303F"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            tools:text="颜色：米色"
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_title"
            android:layout_toEndOf="@id/iv_goods_pic"
            android:textColor="@color/grey_3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_nums"
            tools:text="x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_price"
            android:layout_alignParentEnd="true"
            android:textColor="@color/grey_3"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="60金豆"
            android:textColor="@color/grey_3"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/black_1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="包邮"
            android:textColor="@color/grey_3"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/return_gold_bean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_points_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返豆"
            android:textColor="@color/black_1"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_question"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_points_1"
            android:layout_marginStart="5dp"
            android:src="@mipmap/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="60金豆"
            android:textColor="#FF2A28"
            android:textSize="13sp" />
    </RelativeLayout>


</LinearLayout>