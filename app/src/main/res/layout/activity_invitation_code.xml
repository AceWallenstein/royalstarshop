<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_invitation_code"
    >
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请码"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/go_back" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_invitation_code"
        android:drawablePadding="4dp"
        android:drawableStart="@mipmap/invitation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码"
        android:textColor="@color/black_3"
        android:textSize="16sp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="50dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_code"
        android:layout_below="@id/tv_invitation_code"
        android:background="@null"
        android:hint="请输入您的邀请码"
        android:layout_marginTop="15dp"
        android:textColorHint="#CCCCCC"
        android:textSize="16sp"
        android:layout_marginStart="50dp"/>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_commit"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ed_code"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_below="@id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textSize="15sp"
        android:textColor="@color/black_3"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_tip_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入好友给你的邀请码，完成账号注册信息。"
        android:textSize="15sp"
        android:textColor="@color/black_3"/>
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_juice_22"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>






</RelativeLayout>