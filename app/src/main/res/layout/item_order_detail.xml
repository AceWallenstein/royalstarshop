<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_status"
            android:layout_toRightOf="@id/iv_shop"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            tools:text="轻熟风垂感先手首要系带翻领双排扣过膝风衣外套女" />

        <TextView
            android:id="@+id/tv_goods_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_num"
            android:layout_toRightOf="@id/iv_shop"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            tools:text="杏色；xs" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            tools:text="退款" />


        <TextView
            android:layout_below="@id/tv_title"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/light_black"
            android:textSize="15sp"
            tools:text="X1件" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/rl_jin_dou"
        android:layout_below="@id/rl_freight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_points_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返豆"
            android:textColor="@color/black_1"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv_question"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_points_1"
            android:layout_marginStart="5dp"
            android:src="@mipmap/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#FF2A28"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_freight"
        android:layout_below="@id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/black_1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="包邮"
            android:textColor="@color/grey_3"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_after_sale"
        android:layout_below="@id/rl_jin_dou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_after_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_red_stroke_17"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="申请售后"
            android:textColor="@color/light_red"
            android:textSize="11sp" />

    </RelativeLayout>


</RelativeLayout>
